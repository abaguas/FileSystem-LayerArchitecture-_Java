package pt.tecnico.mydrive.domain;

class MyDrive {
  int counter;
}

class User {
  String username;
  String password;
  String name;
}

class Permission {
  boolean read;
  boolean write;
  boolean execution;
  boolean elimination;
}

class File{
  String name;
  int id;
  LocalTime lastChange;
}

class FileWithContent extends File {
  String content;
}

class Directory extends File;

class PlainFile extends FileWithContent;

class Link extends FileWithContent;

class App extends FileWithContent;

relation DomainRootHasMyDriveApplication {
  .pt.ist.fenixframework.DomainRoot playsRole root {
    multiplicity 0..1;
  }
  MyDrive playsRole myDrive {
    multiplicity 0..1;
  }
}

relation MyDriveContainsRootDirectory{
  MyDrive playsRole myDrive {
    multiplicity 1;
  }
  Directory playsRole rootSDirectory {
    multiplicity 1;
  }
}

relation FileHasOwner{
  File playsRole file{
    multiplicity 1;
  }
  User playsRole owner {
    multiplicity 1;  
  }
}

relation MyDriveContainsUsers{
  MyDrive playsRole myDrive {
    multiplicity 1;
  }
  User playsRole user {
    multiplicity 1..*;
  }
}

relation UserHasMainDirectory{
  User playsRole user {
    multiplicity 1;
  }
  Directory playsRole mainDirectory {
    multiplicity 1;
  }
}

relation DirectoryHasFiles {
  Directory playsRole directory {
    multiplicity 1;
  }
  File playsRole file {
    multiplicity *;
  }
}

relation DirectoryhasSelfDirectory{
  Directory playsRole ownDirectory {
    multiplicity 1;
  }
  Directory playsRole selfDirectory{
   multiplicity 1;
  }
}

relation DirectoryhasFatherDirectory{
  Directory playsRole sonDirectory {
    multiplicity 0..*;
  }
  Directory playsRole fatherDirectory{
   multiplicity 1;
  }
}

relation UserhasPermissionMask{
  User playsRole user {
    multiplicity 1;
  }
  Permission playsRole permission{
   multiplicity 1;
  }
}


relation FilehasUserPermission{
  File playsRole file_ {
    multiplicity 1;
  }
  Permission playsRole userPermission{
   multiplicity 1;
  }
}

relation FilehasOthersPermission{
  File playsRole file {
    multiplicity 1;
  }
  Permission playsRole othersPermission{
   multiplicity 1;
  }
}

relation MyDrivehasCurrentDirectory{
  MyDrive playsRole manager {
    multiplicity 1;
  }
  Directory playsRole currentDir{
   multiplicity 1;
  }
}

relation MyDrivehasCurrentUser{
  MyDrive playsRole manager {
    multiplicity 1;
  }
  User playsRole currentUser{
   multiplicity 1;
  }
}
